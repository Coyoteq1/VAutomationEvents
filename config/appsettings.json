{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "VAutomationEvents": "Debug",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "VAutomationEvents": {
    "Arena": {
      "Enabled": true,
      "Center": {
        "X": -1000,
        "Y": -5,
        "Z": -500
      },
      "Radius": 50,
      "EnterRadius": 50,
      "ExitRadius": 75,
      "CheckInterval": 2.0
    },
    "Automation": {
      "Enabled": true,
      "UpdateInterval": 30,
      "MaxConcurrentTasks": 10,
      "EnableHealthChecks": true
    },
    "Character": {
      "Enabled": true,
      "MaxCharacters": 3,
      "AutoSave": true,
      "SaveInterval": 300
    },
    "Services": {
      "EnableCaching": true,
      "CacheExpiration": 3600,
      "EnableMetrics": true,
      "EnableDiagnostics": false
    },
    "Security": {
      "EnableAuditLog": true,
      "MaxFailedAttempts": 5,
      "LockoutDuration": 900,
      "RequireAdminForSensitiveCommands": true
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5000"
      }
    }
  }
}
